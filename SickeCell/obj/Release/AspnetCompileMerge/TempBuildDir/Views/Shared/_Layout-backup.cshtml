                document.location = '@Url.Action("Index","Home")';
            }   
        }       

        function Staff_Attendance() {
            globalRole = localStorage.getItem("variableRole");
            if (globalRole.trim() ==="Admin/Super User" || globalRole === "Head Teacher" || globalRole === "Super Admin") {
