<link href="../../Content/styling.css" rel="stylesheet" />

<link href="../../Content/bootstrap.css" rel="stylesheet" />
<link href="../../Content/multi.css" rel="stylesheet" />
<script src="../../Scripts/jquery-3.3.1.js"></script>
<script src="../../Library/angular.min.js"></script>

<!--Start Preloader -->
<div class="preloader"></div>

<section ng-app="app" class="col-md-12">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <br />
    <br />
    <br />
    <br />
    <div ng-controller="viewController" class="container">

        <div class="col-md-12">
            <div class="col-md-4 col-md-offset-4">
                <!--<div class="box" style="border-style:solid;border-color:#f37946;border-width:5px;height:300px;width:350px;border-radius:6px;">-->
                <div class="box" style="border-style:solid;border-color:#28c4f4;border-width:3px;border-radius:8px;position:fixed;top:50%;left:50%;width:30em;height:18em;margin-top:-9em;margin-left:-15em;">
                    <div class="content-wrap" style="margin-left:30px;margin-top:40px;">
                        <h6 style="color:#f37946;font-size:17px;font-weight:700;">Log In</h6>

                        <form action="" method="post" id="login">
                            <div>
                                <input class="form-control" type="email" placeholder="E-mail address" id="email" style="height:30px;" autocomplete="off">
                                <div style="height:4px;"></div>
                                <input class="form-control" type="password" placeholder="Password" id="pwd" name="pwd" style="height:30px;">
                                <div class="action" ng-click="login()" style="margin-top:55px;margin-left:110px;">
                                    <a class="btn btn-primary signup" style="width:120px; background-color:#436280; color:white;">Login</a>
                                </div>
                            </div>
                            <div style="margin-top:-80px;">
                                <input type="checkbox" id="show-hide" name="show-hide" value="" />
                                <label for="show-hide" style="color:#f37946; font-weight:700;">Show password</label>
                            </div>

                        </form>
                    </div>
                    <div class="already" style="margin-top:85px;">
                        <span style="font-size:16px;">Don't have an account yet?</span>
                        <a href="/Home/Signup" style="font-size:15px;font-weight:700;">Sign Up</a>
                    </div>
                    <div style="position:fixed;top:50%;left:50%;width:38em;height:18em;margin-top:15em;margin-left:-14em; color:#f37946;font-weight:900; font-size:12px;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">
                        <p>&copy; @DateTime.Now.Year Primeshire Technologies All Rights Reserved<span style="margin-left:5px;color:darkslategrey;font-weight:900;font-family:Tahoma;">V 1.0.4</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <script src="../../Scripts/globalvariable.js"></script>
    <script src="../../Scripts/login.js"></script>
    <script src="../../Scripts/multi.js"></script>
    <script src="../../Scripts/login2.js"></script>
</section>

